<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:showIn="@layout/fragment_feed">

    <ImageView
        android:layout_width="276dp"
        android:layout_height="277dp"
        android:id="@+id/imageView"
        android:src="@drawable/ic_launcher"
        android:layout_gravity="center_horizontal" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="7"
            android:id="@+id/numLikesTextVIew"
            android:layout_gravity="right"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:paddingRight="10dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/likeButtonView"
            android:src="@drawable/abc_btn_check_to_on_mtrl_015"
            android:layout_gravity="right"
            android:layout_alignTop="@+id/numLikesTextVIew"
            android:layout_toLeftOf="@+id/numLikesTextVIew"
            android:layout_toStartOf="@+id/numLikesTextVIew" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="#hashtag"
            android:id="@+id/imageTextView"
            android:layout_gravity="right"
            android:paddingRight="10dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text=".25 mi"
            android:id="@+id/distanceTextView"
            android:layout_gravity="right"
            android:paddingRight="10dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/mapButtonView"
            android:layout_toEndOf="@+id/mapButtonView" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mapButtonView"
            android:src="@drawable/abc_btn_check_to_on_mtrl_000"
            android:layout_gravity="right"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>
</LinearLayout>